@model ArboxEmployeeMS.Models.Department
@{ var isEdit = Model.Id>0; Layout="~/Views/Shared/_Layout.cshtml"; }
<h2>@(isEdit? "Edit":"Create") Department</h2>
<form asp-action="@(isEdit? "Edit":"Create")" method="post" class="row g-3">
    @Html.AntiForgeryToken()
<input type="hidden" asp-for="Id"/>
<div class="col-md-6"><label asp-for="Name" class="form-label"></label><input asp-for="Name" class="form-control"/><span asp-validation-for="Name" class="text-danger"></span></div>
<div class="col-12"><button type="submit" class="btn btn-primary">Save</button> <a href="/Departments" class="btn btn-secondary">Cancel</a></div>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial" />}
